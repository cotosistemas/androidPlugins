<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/videoplayer_layout_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"	
    android:layout_width="match_parent"
	android:background="@android:color/darker_gray"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/layout_video_imageview_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"		
		android:background="@android:color/black"
        android:text="HEADER"/>
	<VideoView
		android:id="@+id/layout_video_viewvideo"
		android:layout_width="match_parent"
		android:layout_height="match_parent"	
        android:layout_below="@+id/layout_video_imageview_header"
        android:layout_above="@+id/layout_video_imageview_footer"		
		android:layout_centerVertical="true">
	</VideoView>	
    <ImageView
        android:id="@+id/layout_video_imageview_footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
		android:background="@android:color/black"
        android:gravity="center"
        android:text="FOOTER"/>
</RelativeLayout>
